<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSoal1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Soal ke : "
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/soalke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/txtSkor1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Skor : "
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/skor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textAlignment="center"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        >

        <ImageButton
            android:id="@+id/jawab1"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:onClick="pilih1"
            android:scaleType="centerInside"
            android:background="@color/lightgray"
            app:srcCompat="@drawable/apel" />

        <ImageButton
            android:id="@+id/jawab2"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:onClick="pilih2"
            android:scaleType="centerInside"
            android:background="@color/lightgray"
            app:srcCompat="@drawable/anggur" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/jawab3"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:onClick="pilih3"
            android:scaleType="centerInside"
            android:background="@color/lightgray"
            app:srcCompat="@drawable/anjing" />

        <ImageButton
            android:id="@+id/jawab4"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:onClick="pilih4"
            android:scaleType="centerInside"
            android:background="@color/lightgray"
            app:srcCompat="@drawable/ayam" />
    </LinearLayout>

</LinearLayout>